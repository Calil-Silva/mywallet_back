{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {  
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages"
            }
        ],
        "no-undef": 0,
        "consistent-return": 0,
        "radix": 0,
        "no-shadow": 0
    }
}
